{
  "version": "2.0.0",
  "system": {
    "debug_mode": false,
    "fullscreen": true,
    "log_level": "info",
    "log_file": "/var/log/bamboo_controller.log"
  },
  "camera": {
    "device_path": "/dev/video0",
    "width": 3280,
    "height": 2464,
    "fps": 30,
    "buffer_count": 4,
    "use_hardware_acceleration": true,
    "exposure": -1,
    "gain": -1,
    "shared_memory_key": "/tmp/bamboo_camera_shm",
    "use_shared_memory": true,
    "display_width": 1280,
    "display_height": 720
  },
  "ai": {
    "model_path": "/opt/bamboo/models/yolov8n.onnx",
    "engine_path": "/opt/bamboo/models/yolov8n.engine",
    "input_width": 640,
    "input_height": 640,
    "confidence_threshold": 0.7,
    "nms_threshold": 0.4,
    "use_tensorrt": true,
    "use_int8": true,
    "use_dla": true
  },
  "display": {
    "framebuffer_device": "/dev/fb0",
    "width": 1920,
    "height": 1080,
    "bpp": 32,
    "vsync": true,
    "brightness": 80
  },
  "touch": {
    "device_path": "/dev/input/event0",
    "calibration_enabled": true,
    "sensitivity": 10,
    "gesture_enabled": false
  },
  "performance": {
    "max_fps": 60,
    "enable_gpu_acceleration": true,
    "memory_pool_size_mb": 128,
    "thread_priority": 50
  },
  "ui": {
    "theme": "dark",
    "font_size": 16,
    "animation_duration_ms": 200,
    "button_click_feedback": true
  },
  "detection": {
    "max_points": 16,
    "pixel_to_mm_ratio": 0.1,
    "draw_confidence": true,
    "draw_bounding_boxes": true,
    "overlay_opacity": 128
  },
  "hardware": {
    "cut_speed": 50,
    "cut_depth": 30,
    "blade_position": 0,
    "auto_retract": true,
    "retract_delay_ms": 1000,
    "force_threshold": 80.0,
    "controller_type": "modbus_rtu",
    "serial_port": "/dev/ttyUSB0",
    "baud_rate": 115200
  }
}